<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >


    <TextView
        android:id="@+id/textin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/LedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/led_on"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/LedOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/led_off"
            android:textSize="12sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/Brazo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brazo"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekBarB"
        android:max = "80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Brazo_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/brazo_progress"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/antebrazo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/antebrazo"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekBarA"
        android:max = "50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/antebrazo_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/ante_progress"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mano_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mano"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekBarM"
        android:layout_width="match_parent"
        android:max = "180"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mano_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/progress_mano"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mun_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/muneca"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekBarMun"
        android:max = "180"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mun_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/progress_mun"
        android:textSize="10sp" />

    <Button
        android:id="@+id/button_left"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_izq" />

    <Button
        android:id="@+id/button_right"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/button_der" />
 
</LinearLayout>
